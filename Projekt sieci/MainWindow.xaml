<Window x:Class="Projekt_sieci.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_sieci"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem >
                <TabItem.Header >
                    <DockPanel>
                    <TextBlock Text="Program" x:Name="Program1" Margin="0 0 5 0"/>
                    <Button x:Name="Zamknij" Content="X"></Button>
                    </DockPanel>
                </TabItem.Header>
                
                <ContentControl Background="#FFE5E5E5">
                    <local:ObserwowanieAplikacji/>
                </ContentControl>
            </TabItem>
            <TabItem Header="TabItem" >
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            
        </TabControl>
    </Grid>
</Window>
